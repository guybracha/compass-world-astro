---
import './custom.css'; // כי הקובץ באותה תיקייה
---
<html lang="en" class="no-js" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark light" />
    <title><slot name="title" />Compass World</title>
    <slot name="head" />

    <!-- GSAP קודם, ואז הסקריפט שלך (להניח ב: public/scripts/gsap-init.js) -->
    <script src="https://cdn.jsdelivr.net/npm/gsap@3/dist/gsap.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3/dist/ScrollTrigger.min.js" defer></script>
    <script src="/scripts/gsap-init.js" defer></script>

    <!-- Theme toggle + no-js removal -->
    <script is:inline>
      (function () {
        // הסר no-js כדי לאפשר CSS/JS תלויי-מחלקה
        document.documentElement.classList.remove('no-js');

        // החלת מצב ערכה לפני ציור הדף (למניעת פלאש)
        const root = document.documentElement;
        const apply = (m) => { root.setAttribute('data-theme', m); localStorage.setItem('theme', m); };
        apply(localStorage.getItem('theme') || 'dark');

        // קישור כפתור החלפת ערכה אחרי טעינת ה-DOM
        window.addEventListener('DOMContentLoaded', () => {
          const btn = document.getElementById('themeToggle');
          if (!btn) return;
          btn.addEventListener('click', () => {
            const next = root.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
            apply(next);
          });
        });
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
